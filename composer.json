{
    "name": "laravel/react-starter-kit",
    "description": "The skeleton application for the Laravel framework.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "laravel",
        "framework"
    ],
    "require": {
        "php": "^8.4",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "laravel/wayfinder": "^0.1.9"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "barryvdh/laravel-ide-helper": "^3.6",
        "brianium/paratest": "^7.13",
        "driftingly/rector-laravel": "^2.0",
        "ergebnis/composer-normalize": "^2.48",
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.7",
        "laravel/boost": "^1.1",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "rector/rector": "^2.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "ci": [
            "@fmt:ci",
            "@lint:ci",
            "@refactor:ci"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "fix": [
            "@refactor",
            "@fmt"
        ],
        "fmt": "vendor/bin/pint -vv --parallel",
        "fmt:ci": "vendor/bin/pint -vv --parallel --test",
        "generate:ide-helpers": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models -RW",
            "@php artisan ide-helper:meta",
            "@fmt"
        ],
        "lint": "XDEBUG_MODE=off vendor/bin/phpstan analyze --memory-limit=1G",
        "lint:ci": "vendor/bin/phpstan analyze --memory-limit=1G --error-format=github",
        "refactor": "vendor/bin/rector",
        "refactor:ci": "vendor/bin/rector --dry-run",
        "reschema": [
            "php artisan migrate:fresh --seed",
            "@generate:ide-helpers"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --parallel"
        ]
    },
    "$schema": "https://getcomposer.org/schema.json"
}
