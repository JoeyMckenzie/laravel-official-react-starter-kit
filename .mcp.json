{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Users/jmckenzie/github.com/joeymckenzie/laravel-official-react-starter-kit"
            }
        },
        "serena": {
            "_comment": "Requires uv/uvx - install with: brew install uvx",
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant",
                "--project",
                "${PWD}",
                "--enable-web-dashboard",
                "false"
            ]
        }
    }
}
